@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    if (User.Identity?.IsAuthenticated ?? false) {
        <ul>
            <li
                class="list-group-item">
                <a
                    asp-action="Table"
                    asp-controller="Producers"
                    class="btn btn-outline-info">
                    PRODUCERS
                </a>
            </li>
        </ul>
    } else {
        <h1>NOT AUTHORIZED</h1>
    }
}