            <li class="list-group-item">
                <a class="btn btn-outline-info" asp-controller="Home" asp-action="VideoCards">GPUs</a>
            </li>
        </ul>
    }
    else
    {
        <a class="btn btn-black align-middle text-danger" asp-controller="Authentication" asp-action="LoginIndex">LogIn</a>
    }
}