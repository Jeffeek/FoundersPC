<section
    class='pricing'>
    <div
        class='container-sm'>
        <div
            class='section-inner'>
            <div
                class='my-5 pricing-header text-center text-light'>
                <h2
                    class='mt-0 section-title'>
                    Unlimited for all
                </h2>
                <p
                    class='fs-4 mb-5 section-paragraph'>
                    Try the best plan for big companies :)
                </p>
            </div>
            <div
                class='pricing-tables-wrap'>
                <div
                    class='pricing-table'>
                    <div
                        class='d-flex pricing-table-inner'>
                        <div>
                            <div
                                class='pricing-table-header'>
                                <div>
                                    <span
                                        class='h2 pricing-table-price-currency'>
                                        $
                                    </span>
                                    <span
                                        class='h1'>
                                        999.999
                                    </span>
                                    <span>
                                        /FOREVER
                                    </span>
                                </div>
                            </div>
                            <div
                                class='pricing-table-features-title'>
                                What you will get
                            </div>
                            <ul
                                class='pricing-table-features'>
                                <li>
                                    <span>Unlimited access to our API</span>
                                </li>
                                <li>
                                    <span>24/7 Support</span>
                                </li>
                                <li>
                                    <span>Congratulations!</span>
                                </li>
                                <li>
                                    <span>- $999.999</span>
                                </li>
                            </ul>
                        </div>
                        <div
                            class='justify-content-center'>
                            <a
                                asp-action='SignIn'
                                asp-controller='Authentication'
                                class='button button-primary'>
                                Order now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section
    class='cta'>
    <div
        class='container'>
        <div
            class='cta-inner section-inner'>
            <h3
                class='mt-0 section-title'>
                Still not convinced on buying?
            </h3>
            <div>
                <a
                    asp-action='SignIn'
                    asp-controller='Authentication'
                    class='button button-primary button-wide-mobile'>
                    Get in touch
                </a>
            </div>
        </div>
    </div>
</section>
</main>
</div>
</div>


@section Scripts {
    <script
        src='~/lib/scrollreveal/scrollreveal.min.js'></script>
    <script
        src='~/lib/anime/anime.min.js'></script>
    <script
        src='~/js/home.js'></script>
}