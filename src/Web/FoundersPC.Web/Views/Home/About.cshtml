@section Scripts {
    <script>
        $(document).ready(function () {
            var moveLeft = 20;
            var moveDown = 10;

            $('.popup-container').each(function (index, container) {
                $(this).children('a.popup-trigger').hover(function (e) {
                        $(container).children('.pop-up-content').show();
                    },
                    function () {
                        $(container).children('.pop-up-content').hide();
                    });

                $(this).children('a.popup-trigger').mousemove(function (e) {
                    $(container).children('.pop-up-content').css('top', e.pageY + moveDown).css('left', e.pageX + moveLeft);
                });
            });
        });
    </script>
