@{
    Layout = "_Layout";
@section Styles {
    <link
        href="~/css/pricing.css"
        rel="stylesheet">
    <link
        href="~/css/neon-btn-styles.css"
        rel="stylesheet">
}


}

<div
    class='container-slider'>
<div
    class='pricing-slider'>
<div
    class='price-box price-box-low'>
    <div
        class='bg'>
    </div>
    <div
        class='details'>
        <h1 >Low</h1>
        <p>
            Initial option. For mere pennies, you can evaluate our service.
            <hr
                class='hr-runner'/>
            <h3>
                Access:
                <span
                    class='text-danger text-decoration-underline text-uppercase'>
                    2 months
                </span>
            </h3>
        </p>
        <a
            class='btn btn-neon float-end neon-pink neon-stripes'
            href='@GetLinkForBuyButton("Low")'>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Check Now
        </a>
    </div>

    <div
        class='price-card-illustration'>
        <div
            class='align-items-center d-flex inner justify-content-center text-center'>
            <h1
                class='display-1 text-white translate-middle-x'>
                $299
            </h1>
        </div>
    </div>
</div>


<div
    class='price-box price-box-medium'>
    <div
        class='bg'>
    </div>
    <div
        class='details'>
        <h1
            class='mt-5'>
            Medium
        </h1>
        <p>
            For those who have already tried our service, but are not ready to pay more.
            <hr
                class='hr-runner'/>
            <h3>
                Access:
                <span
                    class='text-danger text-decoration-underline text-uppercase'>
                    6 month
                </span>
            </h3>
        </p>
        <a
            class='btn btn-neon float-end neon-blue neon-stripes'
            href='@GetLinkForBuyButton("Medium")'>
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Check Now
        </a>
    </div>

    <div
        class='price-card-illustration'>
        <div
            class='align-items-center d-flex inner justify-content-center text-center'>
            <h1
                class='display-1 text-white translate-middle-x'>
                $599
            </h1>
        </div>
    </div>
</div>

<div
    class='price-box price-box-high'>
    <div
        class='bg'>
    </div>
    <div
        class='details'>
        <h1
            class='mt-5'>
