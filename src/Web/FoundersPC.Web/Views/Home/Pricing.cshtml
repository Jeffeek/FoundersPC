    <div
        class='price-card-illustration'>
        <div
            class='align-items-center d-flex inner justify-content-center text-center'>
            <h1
                class='display-1 text-white translate-middle-x'>
                $999.999
            </h1>
        </div>
    </div>
</div>

</div>

<svg
    class='prev-price-card'
    height='91'
    viewBox='0 0 56.898 91'
    width='56.898'
    xmlns='http://www.w3.org/2000/svg'>
    <path
        d='M45.5,0,91,56.9,48.452,24.068,0,56.9Z'
        fill='#fff'
        transform='translate(0 91) rotate(-90)'/>
</svg>
<svg
    class='next-price-card'
    height='91'
    viewBox='0 0 56.898 91'
    width='56.898'
    xmlns='http://www.w3.org/2000/svg'>
    <path
        d='M45.5,0,91,56.9,48.452,24.068,0,56.9Z'
        fill='#fff'
        transform='translate(56.898) rotate(90)'/>
</svg>
<div
    class='price-trail'>
    <div
        class='price-box-low price-trail-active'>
        1
    </div>
    <div
        class='price-box-medium'>
        2
    </div>
    <div
        class='price-box-high'>
        3
    </div>
    <div
        class='price-box-ultra'>
        4
    </div>
    <div
        class='price-box-unstoppable'>
        5
    </div>
</div>
</div>

@functions
{
    string GetLinkForBuyButton(string tokenType) {
        var auth = User.Identity?.IsAuthenticated ?? false;
        return auth ? Url.Action("Buy", "Pricing", new {
                                                           tokenType
                                                       }) : Url.Action("SignIn", "Authentication");
    }
}


@section Scripts
{
    <script
        src='~/lib/GSAP/js/gsap-latest-beta.min.js'></script>
    <script
        src='~/lib/GSAP/js/CSSRulePlugin3.min.js'></script>
    <script
        src='~/js/pricing.js'></script>
}