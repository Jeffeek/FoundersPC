@using FoundersPC.API.Dto
@using PagedList.Core.Mvc
@model FoundersPC.Web.Domain.Common.IndexViewModel<FoundersPC.API.Dto.VideoCardReadDto>

@{
    ViewData["Title"] = "Video Card CoresTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
@section Styles {
    <link
        href='~/css/table.css'
        rel='stylesheet'>
}}

<hardware-table
    asp-controller='VideoCards'
    entities='@(Model.PagedList)'
    entity-type='@(typeof(VideoCardReadDto))'/>
@{
    if (Model.IsPaginationNeeded) {
        <pager
            asp-action="VideoCardsTable"
            asp-controller="VideoCards"
            class="d-flex justify-content-center"
            list="@Model.PagedList"
            options="@PagedListRenderOptions.Bootstrap4Full"
            param-page-number='pageNumber'/>    }
}