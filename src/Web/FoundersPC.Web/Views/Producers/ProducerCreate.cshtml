@using System.Globalization
@model FoundersPC.Web.Domain.Common.Hardware.Producer.ProducerInsertDtoViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
@section Styles {
    <link
        href="~/css/neon-btn-styles.css"
        rel="stylesheet">
    <link
        href="~/css/entity-edit.css"
        rel="stylesheet">
}


}

<h1
    class='mt-4 text-center text-light'>
    Add Producer Page
</h1>
<div
    class='mt-5 row'>
    <div
        class='col-12 col-md-12 col-sm-12 col-xl-12 col-xxl-12'>
        <form
            asp-action='Create'
            asp-controller='Producers'
            class='d-flex flex-column justify-content-center'
            method='post'>
            <div
                asp-validation-summary='ModelOnly'
                class='text-danger'>
            </div>
            <div
                class='d-grid'>
                <div
                    class='row'>
                    <div
                        class='row'>
                        <div
                            class='form-group text-light'>
                            <div
                                class='form-check'>
                                <input
                                    asp-for='IsShortNameEmpty'
                                    class='form-check-input'
                                    type='checkbox'>
                                <label
                                    class='form-check-label'>
                                    I don't know
                                </label>
                            </div>
                            <div
                                class='form-label-group ms-3'>
                                <input
                                    asp-for='ShortName'
                                    class='bg-dark form-control text-light'
                                    placeholder='Efficiency'
                                    type='text'/>
                                <label>Short Name</label>
                            </div>
                        </div>
                        <span
                            asp-validation-for='ShortName'
                            class='text-danger'>
                        </span>
                    </div>
                </div>
                <div
                    class='row-cols-auto'>
                    <div
                        class='form-label-group'>
                        <div
                            class='input-group'>
                            <input
                                asp-for='FullName'
                                class='bg-dark form-control text-light'
                                placeholder='FullName'
                                value='@Model.FullName'>
                            <label>Full Name</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='FullName'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row'>
                    <div
                        class='form-label-group'>
                        <div
                            class='input-group'>
                            <input
                                asp-for='Country'
                                class='bg-dark form-control text-light'
                                placeholder='Country'
                                value='@Model.Country'>
                            <label>Country</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='Country'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row'>
                    <div
                        class='row'>
                        <div
                            class='form-group text-light'>
                            <div
                                class='form-check'>
                                <input
                                    asp-for='IsWebsiteEmpty'
                                    class='form-check-input'
                                    type='checkbox'>
                                <label
                                    class='form-check-label'>
                                    I don't know
                                </label>
                            </div>
                            <div
                                class='form-label-group ms-3'>
                                <input
                                    asp-for='Website'
                                    class='bg-dark form-control text-light'
                                    placeholder='Website'
                                    type='text'/>
                                <label>Website</label>
                            </div>
                        </div>
                        <span
                            asp-validation-for='Website'
                            class='text-danger'>
                        </span>
                    </div>
                </div>
                <div
                    class='row'>
                    <div
                        class='form-group text-light'>
                        <div
                            class='form-check'>
                            <input
                                asp-for='IsFoundationDateEmpty'
                                class='form-check-input'
                                type='checkbox'>
                            <label
                                class='form-check-label'>
                                I don't know
                            </label>
                        </div>
                        <div
                            class='form-label-group ms-3'>
                            <input
                                asp-for='FoundationDate'
                                class='bg-dark form-control text-light'
                                max='@DateTime.Now.ToString("yyyy-MM-dd")'
                                min='@DateTime.Parse("1800-01-01", CultureInfo.InvariantCulture).ToString("yyyy-MM-dd")'
                                placeholder='FoundationDate'
                                type='date'
                                value='@Model.FoundationDate.ToString("yyyy-MM-dd")'/>
                            <label>Foundation Date</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='FoundationDate'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='form-group row'>
                    <input
                        class='btn btn-apply btn-neon neon-green'
                        type='submit'
                        value='Save'/>
                </div>
            </div>
        </form>
    </div>
    <hr
        class='hr-runner'/>
</div>
<div
    class='align-items-center d-flex justify-content-center mt-4 text-light'>
    <a
        asp-action='ProducersTable'
        asp-controller='Producers'
        class='btn btn-apply btn-neon neon-yellow'>
        Back to Table
    </a>
</div>