@model FoundersPC.API.Dto.ProducerUpdateDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
@section Styles {
    <link
        href="~/css/neon-btn-styles.css"
        rel="stylesheet">
    <link
        href="~/css/entity-edit.css"
        rel="stylesheet">
}


}

<h1
    class='mt-4 text-center text-light'>
    Edit Producer Page
</h1>
<div
    class='mt-5 row'>
    <div
        class='col-12 col-md-12 col-sm-12 col-xl-12 col-xxl-12'>
        <form
            asp-action='Edit'
            asp-controller='Producers'
            class='d-flex flex-column justify-content-center'
            method='post'>
            <div
                asp-validation-summary='ModelOnly'
                class='text-danger'>
            </div>
            <div
                class='d-grid'>
                <div
                    class='row'>
                    <div
                        class='form-label-group'>
                        <div
                            class='input-group'>
                            <input
                                asp-for='ShortName'
                                class='bg-dark form-control text-light'
                                placeholder='ShortName'
                                value='@Model.ShortName'>
                            <label>Short Name</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='ShortName'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row-cols-auto'>
                    <div
                        class='form-label-group'>
                        <div
                            class='input-group'>
                            <input
                                asp-for='FullName'
                                class='bg-dark form-control text-light'
                                placeholder='FullName'
                                value='@Model.FullName'>
                            <label>Full Name</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='FullName'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row'>
                    <div
                        class='form-label-group'>
                        <div
                            class='input-group'>
                            <input
                                asp-for='Country'
                                class='bg-dark form-control text-light'
                                placeholder='Country'
                                value='@Model.Country'>
                            <label>Country</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='Country'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row'>
                    <div
                        class='form-label-group'>
                        <div
                            class='input-group'>
                            <input
                                asp-for='Website'
                                class='bg-dark form-control text-light'
                                placeholder='Website'
                                value='@Model.Website'>
                            <label>Website</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='Website'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row'>
                    <div
                        class='form-label-group'>
                        <div
                            class='input-group'>
                            <input
                                asp-for='FoundationDate'
                                class='bg-dark form-control text-light'
                                placeholder='FoundationDate'
                                type='date'
                                value='@Model.FoundationDate?.ToString("yyyy-MM-dd")'>
                            <label>Foundation Date</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='FoundationDate'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='form-group row'>
                    <input
                        class='btn btn-apply btn-neon neon-green'
                        type='submit'
                        value='Save'/>
                </div>
            </div>
        </form>
    </div>
    <hr
        class='hr-runner'/>
</div>
<div
    class='align-items-center d-flex justify-content-center mt-4 text-light'>
    <a
        asp-action='Table'
        asp-controller='Producers'
        class='btn btn-apply btn-neon neon-yellow'>
        Back to Table
    </a>
</div>