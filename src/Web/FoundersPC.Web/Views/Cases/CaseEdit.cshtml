@model FoundersPC.Web.Domain.Common.Hardware.Cases.CaseUpdateDtoViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
@section Styles {
    <link
        href="~/css/neon-btn-styles.css"
        rel="stylesheet">
    <link
        href="~/css/entity-edit.css"
        rel="stylesheet">
}
}

<h1
    class='mt-4 text-center text-light'>
    Edit Case Page
</h1>
<div
    class='mt-5 row'>
<div
    class='col-12 col-md-12 col-sm-12 col-xl-12 col-xxl-12'>
<form
    asp-action='Edit'
    asp-controller='Cases'
    class='d-flex flex-column justify-content-center'
    method='post'>
<div
    asp-validation-summary='ModelOnly'
    class='text-danger'>
</div>
<div
    class='d-grid'>
<div
    class='row'>
    <div
        class='form-check ms-3 text-light'>
        <div
            class='text-light'>
            <input
                asp-for='ProducerId'
                class='form-check-input'
                type='number'>
        </div>
        <label
            class='form-check-label'>
            Producer Id
        </label>
    </div>
    <span
        asp-validation-for='ProducerId'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-check ms-3 text-light'>
        <div
            class='text-light'>
            <input
                asp-for='Title'
                class='form-check-input'
                type='text'>
        </div>
        <label
            class='form-check-label'>
            Title
        </label>
    </div>
    <span
        asp-validation-for='Title'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-group ms-1 text-light'>
        <div
            class='form-check form-check-inline'>
            <input
                asp-for='IsDepthEmpty'
                class='form-check-input'
                type='checkbox'>
            <label
                class='form-check-label'>
                I don't know
            </label>
        </div>
        <div
            class='form-check ms-3'>
            <input
                asp-for='Depth'
                class='form-check-input'
                type='number'>
            <label
                class='form-check-label'>
                Depth
            </label>
        </div>
    </div>
    <span
        asp-validation-for='Depth'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-group ms-1 text-light'>
        <div
            class='form-check form-check-inline'>
            <input
                asp-for='IsHeightEmpty'
                class='form-check-input'
                type='checkbox'>
            <label
                class='form-check-label'>
                I don't know
            </label>
        </div>
        <div
            class='form-check ms-3'>
            <input
                asp-for='Height'
                class='form-check-input'
                type='number'>
            <label
                class='form-check-label'>
                Height
            </label>
        </div>
    </div>
    <span
        asp-validation-for='Height'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-group ms-1 text-light'>
        <div
            class='form-check form-check-inline'>
            <input
                asp-for='IsWeightEmpty'
                class='form-check-input'
                type='checkbox'>
            <label
                class='form-check-label'>
                I don't know
            </label>
        </div>
        <div
            class='form-check ms-3'>
            <input
                asp-for='Weight'
                class='form-check-input'
                type='number'>
            <label
                class='form-check-label'>
                Weight
            </label>
        </div>
    </div>
    <span
        asp-validation-for='Weight'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-group ms-1 text-light'>
        <div
            class='form-check form-check-inline'>
            <input
                asp-for='IsWidthEmpty'
                class='form-check-input'
                type='checkbox'>
            <label
                class='form-check-label'>
                I don't know
            </label>
        </div>
        <div
            class='form-check ms-3'>
            <input
                asp-for='Width'
                class='form-check-input'
                type='number'>
            <label
                class='form-check-label'>
                Width
            </label>
        </div>
    </div>
    <span
        asp-validation-for='Width'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='ms-1 text-light'>
        <input
            asp-for='Type'
            class='form-check-input'
            type='text'>
        <label
            class='form-check-label'>
            Type
        </label>
    </div>
    <span
        asp-validation-for='Type'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-check ms-3 text-light'>
        <div
            class='text-light'>
            <input
                asp-for='WindowMaterial'
                class='form-check-input'
                type='text'>
        </div>
        <label
            class='form-check-label'>
            Window Material
        </label>
    </div>
    <span
        asp-validation-for='WindowMaterial'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-check ms-3 text-light'>
        <div
            class='text-light'>
            <input
                asp-for='MaxMotherboardSize'
                class='form-check-input'
                type='text'>
        </div>
        <label
            class='form-check-label'>
            Max Motherboard Size
        </label>
    </div>
    <span
        asp-validation-for='MaxMotherboardSize'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-check ms-3 text-light'>
        <div
            class='text-light'>
            <input
                asp-for='Material'
                class='form-check-input'
                type='text'>
        </div>
        <label
            class='form-check-label'>
            Material
        </label>
    </div>
    <span
        asp-validation-for='Material'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-check ms-3 text-light'>
        <div
            class='text-light'>
            <input
                asp-for='TransparentWindow'
                class='form-check-input'
                type='checkbox'>
        </div>
        <label
            class='form-check-label'>
            Transparent Window
        </label>
    </div>
    <span
        asp-validation-for='TransparentWindow'
        class='text-danger'>
    </span>
</div>
<div
    class='row'>
    <div
        class='form-check ms-3 text-light'>
        <div
            class='text-light'>
            <input
                asp-for='Color'
                class='form-check-input'
                type='text'>
        </div>
        <label
            class='form-check-label'>
            Color
        </label>
    </div>
    <span
        asp-validation-for='Color'
        class='text-danger'>
    </span>
</div>
<div
    class='form-group row'>
    <input
        class='btn btn-apply btn-neon neon-green'
        type='submit'
        value='Edit'/>
</div>
</div>
</form>
</div>
<hr
    class='hr-runner'/>
</div>
<div
    class='align-items-center d-flex justify-content-center mt-4 text-light'>
    <a
        asp-action='CasesTable'
        asp-controller='Cases'
        class='btn btn-apply btn-neon neon-yellow'>
        Back to Table
    </a>
</div>