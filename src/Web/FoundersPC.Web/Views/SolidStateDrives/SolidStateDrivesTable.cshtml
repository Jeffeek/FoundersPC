@using FoundersPC.API.Dto
@using PagedList.Core.Mvc
@model FoundersPC.Web.Domain.Common.IndexViewModel<FoundersPC.API.Dto.SolidStateDriveReadDto>

@{
    ViewData["Title"] = "Solid State Drives Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
@section Styles {
    <link
        href='~/css/table.css'
        rel='stylesheet'>
}}

<hardware-table
    asp-controller='SolidStateDrives'
    entities='@(Model.PagedList)'
    entity-type='@(typeof(SolidStateDriveReadDto))'/>
@{
    if (Model.IsPaginationNeeded) {
        <pager
            asp-action="SolidStateDriveTable"
            asp-controller="SolidStateDrive"
            class="d-flex justify-content-center"
            list="@Model.PagedList"
            options="@PagedListRenderOptions.Bootstrap4Full"
            param-page-number='pageNumber'/>
    }
}