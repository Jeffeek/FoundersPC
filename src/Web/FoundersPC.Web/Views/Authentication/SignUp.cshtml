@model FoundersPC.Web.Domain.Common.Authentication.SignUpViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
@section Styles {
    <link
        href="~/css/authstyles.css"
        rel="stylesheet">
    <link
        href="~/css/animations.css"
        rel="stylesheet">
    <link
        href="~/css/neon-btn-styles.css"
        rel="stylesheet">
}}

<div
    class='sidenav'>
    <div
        class='login-main-text'>
        <h2>
            FoundersPC
            <br> Registration Page
        </h2>
        <p>SignUpAsync from here to have an access to our API.</p>
    </div>
</div>
<div
    class='main'>
    <div
        class='col-md-9 col-sm-12
               mt-xxl-0 mt-xl-0 mt-lg-0 mt-md-4 mt-sm-4 mt-4'>
        <div
            class='register-form'>
            <form
                asp-action='SignUp'
                asp-controller='Authentication'
                method='post'>
                <div
                    asp-validation-summary='ModelOnly'
                    class='text-danger'>
                </div>
                <div
                    class='mb-3'>
                    <div
                        class='form-label-group
                               mb-1'>
                        <input
                            asp-for='Email'
                            class='bg-dark
                                   form-control
                                   text-light'
                            placeholder='email@example.com'
                            type='email'>
                        <label
                            asp-for='Email'>
                        </label>
                    </div>
                    <span
                        asp-validation-for='Email'
                        class='text-danger
                               d-block'>
                    </span>
                </div>

                <div
                    class='mb-3'>
                    <div
                        class='form-label-group
                           input-group
                           mb-1'>
                        <input
                            asp-for='RawPassword'
                            class='bg-dark
                                   form-control
                                   text-light'
                            id='inputPassword'
                            placeholder='Password'
                            type='password'>
                        <label
                            asp-for='RawPassword'>
                        </label>
                        <div
                            class='d-flex'>
                            <div
                                class='d-flex'
                                id='img-generate-password'>
                                <a
                                    class='align-items-center btn btn-outline-warning d-flex'>
                                    <svg
                                        class='icon icon-reset'
                                        viewBox='0 0 24 24'
                                        xmlns='http://www.w3.org/2000/svg'
                                        xmlns:xlink='http://www.w3.org/1999/xlink'>
                                        <path
                                            clip-rule='evenodd'
                                            d='M20,12c0,4.418-3.582,8-8,8s-8-3.582-8-8s3.582-8,8-8 c1.114,0,2.169,0.237,3.132,0.649l-2.504,2.674l7.493-0.25L19.485,0l-2.21,2.361C15.709,1.499,13.915,1,12,1C5.925,1,1,5.925,1,12 s4.925,11,11,11s11-4.925,11-11H20z'
                                            fill-rule='evenodd'/>
                                    </svg>
                                </a>
                            </div>
                            <div
                                class='d-flex'
                                id='btn-hide'>
                                <a
                                    class='align-items-center btn btn-outline-info d-flex'>
                                    <svg
                                        class='icon icon-eye'
                                        id='password-eye-svg'
                                        viewBox='0 0 30 30'
                                        xmlns='http://www.w3.org/2000/svg'
                                        xmlns:xlink='http://www.w3.org/1999/xlink'>
                                        <path
                                            d='M29,14c-0.552,0-1,0.448-1,1s0.448,1,1,1s1-0.448,1-1S29.552,14,29,14z M1,14c-0.552,0-1,0.448-1,1s0.448,1,1,1s1-0.448,1-1S1.552,14,1,14z M15,12c-1.657,0-3,1.343-3,3s1.343,3,3,3s3-1.343,3-3S16.657,12,15,12z'/>
                                        <path
                                            d='M29.803,14.408C29.803,14.408,24,5,15,5S0.197,14.408,0.197,14.408l-0.034,1.136C0.162,15.544,5,25,15,25s14.838-9.456,14.838-9.456L29.803,14.408z M15,22c-3.866,0-7-3.134-7-7s3.134-7,7-7s7,3.134,7,7S18.866,22,15,22z'/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                    <span
                        asp-validation-for='RawPassword'
                        class='d-block text-danger'>
                    </span>
                </div>

                <div
                    class='mb-3'>
                    <div
                        class='form-label-group
                               input-group
                               mb-1'>
                        <input
                            asp-for='RawPasswordConfirm'
                            class='bg-dark
                                   form-control
                                   text-light'
                            id='inputPasswordConfirm'
                            placeholder='Email address'
                            type='password'>
                        <label>Password Confirm</label>
                        <div
                            class='d-flex'>
                            <div
                                class='d-flex'
                                id='btn-hide-confirm'>
                                <a
                                    class='align-items-center btn btn-outline-info d-flex'>
                                    <svg
                                        class='icon icon-eye'
                                        id='password-confirm-eye-svg'
                                        viewBox='0 0 30 30'
                                        xmlns='http://www.w3.org/2000/svg'
                                        xmlns:xlink='http://www.w3.org/1999/xlink'>
                                        <path
                                            d='M29,14c-0.552,0-1,0.448-1,1s0.448,1,1,1s1-0.448,1-1S29.552,14,29,14z M1,14c-0.552,0-1,0.448-1,1s0.448,1,1,1s1-0.448,1-1S1.552,14,1,14z M15,12c-1.657,0-3,1.343-3,3s1.343,3,3,3s3-1.343,3-3S16.657,12,15,12z'/>
                                        <path
                                            d='M29.803,14.408C29.803,14.408,24,5,15,5S0.197,14.408,0.197,14.408l-0.034,1.136C0.162,15.544,5,25,15,25s14.838-9.456,14.838-9.456L29.803,14.408z M15,22c-3.866,0-7-3.134-7-7s3.134-7,7-7s7,3.134,7,7S18.866,22,15,22z'/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                    <span
                        asp-validation-for='RawPasswordConfirm'
                        class='text-danger
                               d-block'>
                    </span>
                </div>
                <div
                    class='form-group'>
                    <input
                        class='btn btn-outline-success'
                        type='submit'
                        value='Signup'>
                </div>
            </form>
            <hr
                class='hr-runner'/>
            <div
                class='d-block'>
                <div
                    class='mt-3'>
                    <a
                        asp-action='SignIn'
                        asp-controller='Authentication'
                        class='btn btn-outline-info'>
                        Have an account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts
{
    <script>
        $(document).
            ready(
                function ()
                {
                    const eyePaths = "<path d=\"M29,14c-0.552,0-1,0.448-1,1s0.448,1,1,1s1-0.448,1-1S29.552,14,29,14z M1,14c-0.552,0-1,0.448-1,1s0.448,1,1,1s1-0.448,1-1S1.552,14,1,14z M15,12c-1.657,0-3,1.343-3,3s1.343,3,3,3s3-1.343,3-3S16.657,12,15,12z\" fill=\"#FFFFFF\" /><path d=\"M29.803,14.408C29.803,14.408,24,5,15,5S0.197,14.408,0.197,14.408l-0.034,1.136C0.162,15.544,5,25,15,25s14.838-9.456,14.838-9.456L29.803,14.408z M15,22c-3.866,0-7-3.134-7-7s3.134-7,7-7s7,3.134,7,7S18.866,22,15,22z\" fill=\"#FFFFFF\" />";
                    const eyeHidePaths = "<path d=\"M29 14A1 1 0 1 0 29 16 1 1 0 1 0 29 14zM1 14A1 1 0 1 0 1 16 1 1 0 1 0 1 14z\" fill=\"#FFFFFF\" /><path d=\"M9.449 10.747C10.729 9.08 12.736 8 15 8c3.866 0 7 3.134 7 7 0 2.264-1.08 4.271-2.747 5.551l2.732 2.732c5.268-2.724 7.852-7.739 7.852-7.739l-.034-1.136C29.803 14.408 24 5 15 5c-3.286 0-6.14 1.259-8.446 2.851L9.449 10.747zM17.432 21.557C16.673 21.839 15.856 22 15 22c-3.866 0-7-3.134-7-7 0-.856.161-1.673.443-2.432L4.951 9.077c-3.022 2.542-4.754 5.331-4.754 5.331l-.034 1.136C.162 15.544 5 25 15 25c1.85 0 3.521-.327 5.02-.854L17.432 21.557z\" fill=\"#FFFFFF\" /><path fill=\"none\" stroke=\"#FFFFFF\" stroke-width=\"2\" d=\"M1 1L29 29\" /><path d=\"M17.112 18.385C18.242 17.678 19 16.431 19 15c0-2.209-1.791-4-4-4-1.431 0-2.678.758-3.385 1.888L17.112 18.385zM11.011 15.112c.06 2.117 1.759 3.816 3.876 3.876L11.011 15.112z\" fill=\"#FFFFFF\" />";
                    const passwordBox = document.getElementById("inputPassword");
                    const passwordBoxConfirm = document.getElementById("inputPasswordConfirm");
                    const passwordShowHideSvg = document.getElementById("password-eye-svg");
                    const passwordConfirmShowHideSvg = document.getElementById("password-confirm-eye-svg");
                    $("#btn-hide").
                        click(
                            () =>
                            {
                                const isHided = passwordBox.type === "password";
                                passwordBox.type = isHided
                                                   ? "text"
                                                   : "password";
                                passwordShowHideSvg.innerHTML = isHided
                                                                ? eyeHidePaths
                                                                : eyePaths;
                            });
                    $("#btn-hide-confirm").
                        click(
                            () =>
                            {
                                const isHided = passwordBoxConfirm.type === "password";
                                passwordBoxConfirm.type = isHided
                                                          ? "text"
                                                          : "password";
                                passwordConfirmShowHideSvg.innerHTML = isHided
                                                                       ? eyeHidePaths
                                                                       : eyePaths;
                            });
                    $("#img-generate-password").
                        click(
                            () =>
                            {
                                const countOfLetters = randomInt(6, 30);
                                const randomPasswordString = randomString(countOfLetters);
                                passwordBox.value = randomPasswordString;
                            });
                });
    </script>
}