@model FoundersPC.Web.Domain.Entities.ViewModels.Authentication.SignInViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/css/authstyles.css"
          rel="stylesheet">
    <link href="~/css/animations.css"
          rel="stylesheet">
}
<div class="sidenav">
    <div class="login-main-text">
        <h2>
            FoundersPC
            <br> LogIn Page
        </h2>
        <p>SignInAsync from here to access the API.</p>
    </div>
</div>
<div class="main">
    <div class="col-md-8 col-sm-12 mt-3">
        <div class="login-form">
            <form asp-action="SignIn"
                  asp-controller="Authentication"
                  method="post">
                <div asp-validation-summary="ModelOnly"
                     class="text-danger">
                </div>
                <div class="mb-3">
                    <div class="form-label-group
                               mb-1">
                        <input asp-for="LoginOrEmail"
                               class="bg-dark
                                      form-control
                                      text-light"
                               placeholder="email@example.com"
                               value="ilyushin_misha@mail.ru">
                        <label asp-for="LoginOrEmail">
                        </label>
                    </div>
                    <span asp-validation-for="LoginOrEmail"
                          class="d-block text-danger">
                    </span>
                </div>
                <div class="mb-3">
                    <div class="form-label-group
                           input-group
                           mb-1">
                        <input asp-for="RawPassword"
                               class="bg-dark
                                   form-control
                                   text-light"
                               id="inputPassword"
                               placeholder="Password"
                               type="password"
                               value="qwerty">
                        <label asp-for="RawPassword">
                        </label>
                        <div class="d-flex">
                            <div class="d-flex"
                                 id="btn-hide">
                                <a class="btn btn-outline-info d-flex align-items-center">
                                    <svg class="icon icon-eye"
                                         viewBox="0 0 50 50">
                                        <path id="eye-pass-path"
                                              d="M23.986328 9C12.666705 9 2.6928719 16.845918 0.046875 27.126953 A 1.5002454 1.5002454 0 0 0 2.953125 27.873047C5.2331281 19.014082 14.065951 12 23.986328 12C33.906705 12 42.767507 19.01655 45.046875 27.873047 A 1.5002454 1.5002454 0 0 0 47.953125 27.126953C45.306493 16.84345 35.305951 9 23.986328 9 z M 24.001953 17C18.681885 17 14.337891 21.343999 14.337891 26.664062C14.337891 31.984127 18.681885 36.330078 24.001953 36.330078C29.322021 36.330078 33.667969 31.984126 33.667969 26.664062C33.667969 21.343999 29.322021 17 24.001953 17 z">
                                        </path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="RawPassword"
                          class="d-block text-danger">
                    </span>
                </div>
                <div class="form-group">
                    <input class="btn btn-success"
                           id="login-btn"
                           type="submit"
                           value="Sign In">
                </div>
            </form>
            <hr class="hr-runner" />
            <div class="d-block">
                <div>
                    <a asp-action="ForgotPassword"
                       asp-controller="Authentication"
                       class="btn btn-outline-warning">
                        Forgot password
                    </a>
                </div>
                <div class="mt-3">
                    <a asp-action="SignUp"
                       asp-controller="Authentication"
                       class="btn btn-outline-info">
                        Don't have an account
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

