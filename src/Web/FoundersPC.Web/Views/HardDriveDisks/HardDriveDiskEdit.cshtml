@model FoundersPC.Web.Domain.Common.Hardware.HardDriveDisk.HardDriveDiskUpdateDtoViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    @section Styles {
        <link href="~/css/neon-btn-styles.css"
              rel="stylesheet">
        <link href="~/css/entity-edit.css"
              rel="stylesheet">
    }
}

<h1 class='mt-4 text-center text-light'>
    Edit Hard Drive Disk Page
</h1>
<div class='mt-5 row'>
    <div class='col-12 col-md-12 col-sm-12 col-xl-12 col-xxl-12'>
        <form asp-action='Edit'
              asp-controller='HardDriveDisks'
              class='d-flex flex-column justify-content-center'
              method='post'>
            <div asp-validation-summary='ModelOnly'
                 class='text-danger'>
            </div>
            <div class='d-grid'>
                <div class='row mt-3'>
                    <div class='text-light'>
                        <input asp-for='HeadSpeed'
                               class='form-check-input'
                               type='number'
                               placeholder='Head Speed'>
                        <label class='form-check-label'>
                            Head Speed
                        </label>
                    </div>
                    <span asp-validation-for='HeadSpeed'
                          class='text-danger'>
                    </span>
                </div>
                <div
                    class='row mt-3'>
                    <div
                        class='text-light'>
                        <input
                            asp-for='BufferSize'
                            class='form-check-input'
                            type='number'
                            placeholder='Buffer Size'>
                        <label class='form-check-label'>
                            Buffer Size
                        </label>
                    </div>
                    <span
                        asp-validation-for='BufferSize'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row mt-3'>
                    <div
                        class='text-light'>
                        <input
                            asp-for='Noise'
                            class='form-check-input'
                            type='number'
                            placeholder='Noise'>
                        <label class='form-check-label'>
                            Noise
                        </label>
                    </div>
                    <span
                        asp-validation-for='Noise'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row mt-3'>
                    <div
                        class='text-light'>
                        <input
                            asp-for='Factor'
                            class='form-check-input'
                            type='number'
                            placeholder='Factor'>
                        <label class='form-check-label'>
                            Factor
                        </label>
                    </div>
                    <span
                        asp-validation-for='Factor'
                        class='text-danger'>
                    </span>
                </div>
                <div class='row'>
                    <div class='form-label-group'>
                        <div class='input-group'>
                            <input asp-for='Interface'
                                class='bg-dark form-control text-light'
                                placeholder='Interface'>
                            <label>Interface</label>
                        </div>
                    </div>
                    <span asp-validation-for='Interface'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row mt-3'>
                    <div
                        class='text-light'>
                        <input
                            asp-for='Volume'
                            class='form-check-input'
                            type='number'>
                        <label class='form-check-label'>
                            Volume
                        </label>
                    </div>
                    <span
                        asp-validation-for='Volume'
                        class='text-danger'>
                    </span>
                </div>
                <div
                    class='row'>
                    <div
                        class='form-label-group'>
                        <div
                            class='input-group'>
                            <input
                                asp-for='Title'
                                class='bg-dark form-control text-light'
                                placeholder='Title'>
                            <label>Title</label>
                        </div>
                    </div>
                    <span
                        asp-validation-for='Interface'
                        class='text-danger'>
                    </span>
                </div>
                <div class='row'>
                    <div class='form-label-group'>
                        <div class='input-group'>
                            <input asp-for='ProducerId'
                                   class='bg-dark form-control text-light'
                                   placeholder='Producer Id'>
                            <label>Producer Id</label>
                        </div>
                    </div>
                    <span asp-validation-for='ProducerId'
                          class='text-danger'>
                    </span>
                </div>
            </div>
        </form>
    </div>
    <hr class='hr-runner' />
</div>
<div class='align-items-center d-flex justify-content-center mt-4 text-light'>
    <a asp-action='HardDriveDisksTable'
       asp-controller='HardDriveDisks'
       class='btn btn-apply btn-neon neon-yellow'>
        Back to Table
    </a>
</div>
