<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
</head>
<body>
<nav class="navbar navbar-dark bg-dark justify-content-between">
    <a class="navbar-brand text-white"><img src="~/img/computer.svg" alt="">FoundersPC</a>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <a class="navbar-brand btn btn-outline-danger my-2 my-sm-0" asp-controller="Authentication" asp-action="SignOut">Logout</a>
        }
        else
        {
            <a class="navbar-brand btn btn-outline-success my-2 my-sm-0" asp-controller="Authentication" asp-action="LoginIndex">LogIn</a>
        }
    }
</nav>
<div class="container">
    @RenderBody()
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
@await RenderSectionAsync("Scripts", false)
</body>
</html>