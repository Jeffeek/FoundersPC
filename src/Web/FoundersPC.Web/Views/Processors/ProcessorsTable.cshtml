@using FoundersPC.API.Dto
@using PagedList.Core.Mvc
@model FoundersPC.Web.Domain.Common.IndexViewModel<FoundersPC.API.Dto.ProcessorReadDto>

@{
    ViewData["Title"] = "Processors Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
@section Styles {
    <link
        href='~/css/table.css'
        rel='stylesheet'>
}


}

<hardware-table
    asp-controller='Processors'
    entities='@(Model.PagedList)'
    entity-type='@(typeof(ProcessorReadDto))'/>
@{
    if (Model.IsPaginationNeeded) {
        <pager
            asp-action="ProcessorsTable"
            asp-controller="Processors"
            class="d-flex justify-content-center"
            list="@Model.PagedList"
            options="@PagedListRenderOptions.Bootstrap4Full"
            param-page-number='pageNumber'/>    }
}