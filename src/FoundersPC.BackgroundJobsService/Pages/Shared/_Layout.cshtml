<!DOCTYPE html>
<html
    lang='en'>
<head>
    <meta
        charset='utf-8'/>
    <meta
        content='width=device-width, initial-scale=1.0'
        name='viewport'/>
    <title>@ViewData["Title"] - FoundersPC.BackgroundJobsService</title>
    <link
        href='~/lib/bootstrap/dist/css/bootstrap.min.css'
        rel='stylesheet'/>
    <link
        href='~/css/site.css'
        rel='stylesheet'/>
</head>
<body>
<header>
    <nav
        class="bg-white border-bottom box-shadow mb-3 navbar navbar-expand-sm navbar-light navbar-toggleable-sm">
        <div
            class='container'>
            <a
                asp-area=''
                asp-page='/Index'
                class='navbar-brand'>
                FoundersPC.BackgroundJobsService
            </a>
            <button
                aria-controls='navbarSupportedContent'
                aria-expanded='false'
                aria-label='Toggle navigation'
                class='navbar-toggler'
                data-target='.navbar-collapse'
                data-toggle='collapse'
                type='button'>
                <span
                    class='navbar-toggler-icon'>
                </span>
            </button>
            <div
                class="collapse d-sm-inline-flex justify-content-between navbar-collapse">
                <ul
                    class="flex-grow-1 navbar-nav">
                    <li
                        class='nav-item'>
                        <a
                            asp-area=''
                            asp-page='/Index'
                            class='nav-link text-dark'>
                            Home
                        </a>
                    </li>
                    <li
                        class='nav-item'>
                        <a
                            asp-area=''
                            asp-page='/Privacy'
                            class='nav-link text-dark'>
                            Privacy
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div
    class='container'>
    <main
        class='pb-3'
        role='main'>
        @RenderBody()
    </main>
</div>

<footer
    class='border-top footer text-muted'>
    <div
        class='container'>
        &copy; 2021 - FoundersPC.BackgroundJobsService -
        <a
            asp-area=''
            asp-page='/Privacy'>
            Privacy
        </a>
    </div>
</footer>

<script
    src='~/lib/jquery/dist/jquery.min.js'></script>
<script
    src='~/lib/bootstrap/dist/js/bootstrap.bundle.min.js'></script>
<script
    asp-append-version='true'
    src='~/js/site.js'></script>

@await RenderSectionAsync("Scripts", false)
</body>
</html>